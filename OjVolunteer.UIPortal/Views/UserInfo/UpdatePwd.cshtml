
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title></title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/oj/css/main.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="writertop">
            <p>修改密码</p>
        </nav>
    </header>
    <div class="form-content">
        <form class="layui-form layui-form-pane">

            <div class="layui-form-item">
                <label class="layui-form-label">当前密码</label>
                <div class="layui-input-block">
                    <input type="password" placeholder="请输入当前密码" autocomplete="off" class="layui-input" id="orgPass" lay-verify="required|pass">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">新密码</label>
                <div class="layui-input-block">
                    <input type="password" placeholder="请输入新密码" autocomplete="off" class="layui-input" id="newPass" lay-verify="required|pass">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">确认密码</label>
                <div class="layui-input-block">
                    <input type="password" placeholder="请再输入一次新密码" autocomplete="off" class="layui-input" id="checkPass" lay-verify="required|pass">
                </div>
            </div>

            <div class="layui-form-item" style="text-align: center;">
                <button class="layui-btn" lay-submit lay-filter="changePass" id="passYes" style="background-color: #C62F2F;width: 250px;">确定修改</button>
            </div>
        </form>

    </div>
    <script src="~/Content/oj/js/jquery-1.12.4.js"></script>
    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/oj/js/check.js"></script>
    <script type="text/javascript">
        var orgPass = $('#orgPass');
        var newPass = $('#newPass');
        var checkPass = $('#checkPass');
        layui.use('form', function () {
            var form = layui.form;
            form.on('submit(changePass)', function () {
                if (Number(orgPass.val()) == 123456) {
                    if (newPass.val() != checkPass.val()) {
                        layer.alert('2次密码输入不一致！', {
                            icon: 2
                        });
                    } else {
                        layer.alert('修改密码成功！', {
                            icon: 1
                        });
                    }
                } else {
                    layer.alert('当前密码输入错误！', {
                        icon: 2
                    });
                }
                return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
            });
        })
    </script>
</body>
</html>
