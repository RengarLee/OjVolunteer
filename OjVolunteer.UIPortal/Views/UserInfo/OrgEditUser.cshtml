@model OjVolunteer.Model.UserInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserInfoDetail</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/oj/css/admin.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/simple-ajax-form.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#resetPwd").click(function () {
                $.post("/UserInfo/ResetPwd", { "id": $("#UserInfoID").val() }, function (data) {
                    if (data == "success") {
                        alert("密码重置为000000");
                    } else {
                        alert("重置失败,请稍后再试");
                    }
                })

            });
            initTable_talk();
        });

        function initTable_talk(queryParam) {
            $("#tb_talks").bootstrapTable('destroy');
            $('#tb_talks').bootstrapTable({
                contentType: "application/x-www-form-urlencoded",
                url: '/Talks/GetTalkByUserId',
                method: 'post',
                toolbar: '#toolbar',
                striped: true,
                cache: false,
                pagination: true,
                queryParams: function (param) {
                    var temp = {
                        limit: param.limit,
                        offset: param.offset,
                        userId: @Model.UserInfoID,
                    };
                    return temp;
                },
                sidePagination: "server",
                pageNumber: 1,
                pageSize: 5,
                pageList: [5, 10, 20, 50],
                smartDisplay: false,
                showColumns: true,
                showRefresh: true,
                minimumCountColumns: 3,
                clickToSelect: true,
                uniqueId: "TalkID",
                columns: [
                    {
                        field: 'TalkID',//域值
                        title: 'Id',//标题
                        visible: false,
                        align: 'center',
                        width: '6%',

                    },
                    {
                        field: 'TalkFavorsNum',//域值
                        title: '点赞数',//标题
                        visible: true,//false表示不显示
                        width: '6%',
                        align: 'center',
                    },
                    {
                        field: 'TalkContent',//域值
                        title: '心得内容',//标题
                        visible: true,//false表示不显示
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            var s = String(value).substr(0,20)+"...";
                            return s;
                        }
                    },
                    {
                        field: 'TalkFavorsNum',//域值
                        title: '点赞数',//标题
                        visible: true,//false表示不显示
                        width: '6%',
                        align: 'center',

                    },
                    {
                        field: 'CreateTime',//域值
                        title: '创建时间',//标题
                        visible: false,//false表示不显示
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'ModfiedOn',//域值
                        title: '最后更新时间',//标题
                        visible: false,//false表示不显示
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'Status',
                        title: '状态',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["Status"] == 2) {
                                return '未审核';
                            } else if (row["Status"] == 1) {
                                return '已删除';
                            } else if (row["Status"] == 0) {
                                return '正常'
                            }
                        },
                        filterControl: 'input',
                    }, {
                        field: 'operate',
                        title: '操作',
                        align: 'center',
                        width: '25%',
                        formatter: operateTalkFormatter,
                    }
                ],
                onLoadSuccess: function (data) {
                    $(".detailTalkLink").click(function () {
                        var index = layer.open({
                            type: 2,
                            title: false,
                            closeBtn: 0,
                            maxmin: false,
                            shadeClose: true, //点击遮罩关闭层
                            area: ['600px', '700px'],
                            content: '/Talks/TalkDetail/' + $(this).attr("uid")
                        });
                    });
                },
            });
        };
        function operateTalkFormatter(value, row, index) {
            return [
                '<a  href="javascript:void(0)" class="detailTalkLink" uid="' + row['TalkID'] + '">',
                '<i class="glyphicon glyphicon-ok"></i>&nbsp;&nbsp;<span>查看详情</span>',
                '</a>&nbsp;&nbsp;&nbsp;&nbsp;"',
                '<a href="/Talks/TalkDetail/'+ row['TalkID'] + '">Test</a>'
            ].join('');
        }
    </script>
</head>
<body>
    @using (Ajax.BeginForm("OrgEditUser", "UserInfo", FormMethod.Post,new AjaxOptions() { }, new { @class = "layui-form layui-form-pane stuInfo-form" }))
    {
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.UserInfoID)
            @Html.HiddenFor(model => model.UserInfoPwd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.UpdatePoliticalID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.UserInfoIcon, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <form class="">
            <div class="header clearfix">
                <div class="header-left">
                    <img src="@Model.UserInfoIcon" width="100px" height="100px">
                </div>
                <div class="header-right">
                    <div class="layui-form-item">
                        <label class="layui-form-label">登录帐号</label>
                        <div class="layui-input-block">
                            @Html.EditorFor(Model => Model.UserInfoLoginId, new { htmlAttributes = new { autocomplete = "off", disabled = "", lay_verify = "required", @class = "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">学号</label>
                        <div class="layui-input-block">
                            @Html.EditorFor(Model => Model.UserInfoStuId, new { htmlAttributes = new { autocomplete = "off",  @class = "layui-input" } })
                        </div>
                    </div>

                </div>
            </div>
            <div class="content clearfix">
                <div class="content-left">

                    <div class="layui-form-item">
                        <label class="layui-form-label">姓名</label>
                        <div class="layui-input-block">
                            @Html.EditorFor(Model => Model.UserInfoShowName, new { htmlAttributes = new { autocomplete = "off", lay_verify = "required|username", @class = "layui-input" } })
                        </div>
                    </div>


                    <div class="layui-form-item">
                        <label class="layui-form-label">邮箱</label>
                        <div class="layui-input-block">
                            @Html.EditorFor(Model => Model.UserInfoEmail, new { htmlAttributes = new { autocomplete = "off", @class = "layui-input" } })
                        </div>
                    </div>
                    <div class="layui-form-item">

                        <label class="layui-form-label">学院</label>
                        <div class="layui-input-block">

                            @Html.DropDownList("DepartmentID", null, new { htmlAttributes = new { @lay_verify = "required" } })
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">组织名称</label>
                        <div class="layui-input-block">
                            @Html.DropDownList("OrganizeInfoID", null, new { htmlAttributes = new { @lay_verify = "required" } })
                        </div>
                    </div>
                </div>
                <div class="content-right">

                    <div class="layui-form-item">
                        <label class="layui-form-label">手机号</label>
                        <div class="layui-input-block">
                            @Html.EditorFor(Model => Model.UserInfoPhone, new { htmlAttributes = new { autocomplete = "off", lay_verify = "required|phone", @class = "layui-input" } })
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">专业</label>
                        <div class="layui-input-block">
                            @Html.DropDownList("MajorID", null, new { htmlAttributes = new { @lay_verify = "required" } })
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">政治面貌</label>
                        <div class="layui-input-block">
                            @Html.DropDownList("PoliticalID", null, new { htmlAttributes = new { @lay_verify = "required" } })
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">状态</label>
                        <div class="layui-input-block">
                            <select name="Status" lay-verify="required">
                                @{
                                    if (Model.Status == 0)
                                    {
                                        <option value="0" selected>正常</option>
                                        <option value="1">已删除</option>
                                    }
                                    else if (Model.Status == 1)
                                    {

                                        <option value="0">正常</option>
                                        <option value="1" selected>已删除</option>
                                    }
                                }
                            </select>

                        </div>
                    </div>
                </div>
                <div class="content-footer">
                    <div class="layui-form-item">
                        <label class="layui-form-label">注册时间</label>
                        <div class="layui-input-block">
                            @Html.EditorFor(Model => Model.CreateTime, new { htmlAttributes = new { autocomplete = "off", disabled = "", @class = "layui-input" } })
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">最后登录时间</label>
                        <div class="layui-input-block">
                            @Html.EditorFor(Model => Model.UserInfoLastTime, new { htmlAttributes = new { autocomplete = "off", disabled = "", @class = "layui-input" } })
                        </div>
                    </div>
                </div>

            </div>
            <div class="footer">
                <div class="layui-form-item">
                    <button class="layui-btn red-btn" lay-submit>确定更改</button>
                    <button type="reset" class="layui-btn layui-btn-primary">取消更改</button>
                </div>
            </div>
        </form>

        <div>
            <div>
                <table id="tb_talks"></table>
            </div>
        </div>

        <div>
            <div>
                <table id="tb_activity"></table>
            </div>
        </div>

    }


    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/oj/js/check.js"></script>
</body>
</html>
