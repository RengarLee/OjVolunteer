@model OjVolunteer.Model.UserInfo

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Oj志愿者</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link href="~/Content/oj/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/oj/css/main.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="top">
            <p>个人中心</p>
        </nav>
    </header>
    <div class="usertitle clearfix">
        <div class="info-img">
            <img src="@Model.UserInfoIcon" @{ string Test = string.Empty; if (ViewBag.isSelf) { Test = "myimg"; } } id="@Html.Raw(Test)" name="UserInfoIcon">
        </div>
        <div class="info-name">
            <h3>@Model.UserInfoShowName</h3>
            <p>
                所属院校：
                <i>
                    @{if (Model.DepartmentID == null)
                        {
                            <span>未填写</span>
                        }
                        else
                        {
                            @Model.Department.DepartmentName
                        }
                    }
                </i>
                <br>
                志愿者时长：
                <i>
                    @{if (ViewData["UserDuration"] == null)
                        {
                            <span>未参加活动</span>
                        }
                        else
                        {
                            UserDuration userDuration = ViewData["UserDuration"] as UserDuration;
                            @userDuration.UserDurationTotal
                        }
                    }
                </i>
            </p>
        </div>
    </div>

    <div class="baseinfo">
        <ul class="info-list">
            @{
                if (ViewBag.isSelf)
                {
                    <li class="info-item">
                        <a href="#" class="clearfix">
                            <img src="~/Content/oj/images/password.png">
                            <span>志愿者时长详情</span>
                        </a>
                    </li>

                    <li class="info-item">
                        <a href="/UserInfo/UserEditUser/@Model.UserInfoID" class="clearfix">
                            <img src="~/Content/oj/images/password.png">
                            <span>编辑个人资料</span>
                        </a>
                    </li>

                    <li class="info-item">
                        <a href="#" class="clearfix">
                            <img src="~/Content/oj/images/password.png">
                            <span>修改密码</span>
                        </a>
                    </li>
                }
            }
            <li class="info-item">
                <a href="#" class="clearfix">
                    <img src="~/Content/oj/images/password.png">
                    <span>历史活动</span>
                </a>
            </li>

            <li class="info-item">
                <a href="#" class="clearfix">
                    <img src="~/Content/oj/images/password.png">
                    <span>历史心得</span>
                </a>
            </li>
        </ul>
    </div>
    <!-- 退出该帐号 -->
    <div class="userout">
        <a href="/Login/Index" class="btn btn-danger">退出</a>
    </div>
    <!-- 下边导航组件 -->
    <nav class="navbt">
        <a href="" class="btBar"><i class="iconfont icon-paixingbang"></i><span>志愿者榜</span></a>
        <a href="" class="btBar"><i class="iconfont icon-compass"></i><span>志愿者商城</span></a>
        <a href="/UserInfo/Index" class="btBar"><i class="iconfont icon-zhuye this-icon"></i><span>首页</span></a>
        <a href="" class="btBar"><i class="iconfont icon-edit"></i><span>志愿者心得</span></a>
        <a href="/UserInfo/UserInfoSimple/@Model.UserInfoID" class="btBar"><i class="iconfont icon-account"></i><span>个人中心</span></a>
    </nav>
    <!-- 返回上一层组件 -->
    <a href="javascript:history.go(-1)" class="header-back">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>

    <script src="~/Content/oj/js/jquery-1.12.4.js"></script>

    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/oj/js/bootstrap.min.js"></script>
    <script src="~/Content/oj/js/main.js"></script>
    <script type="text/javascript">
        layui.use('upload', function () {
            var upload = layui.upload;
            //执行实例
            var uploadInst = upload.render({
                elem: '#myimg' //绑定元素
                , url: '/UserInfo/UploadIcon' //上传接口
                , accept: 'images'
                , done: function (res) {
                    if (res["msg"] == "error") {
                        alert("头像更换失败，请稍后再试");
                    } else {
                        $("#myimg").attr("src", res["src"]);
                        alert("头像更新成功");
                    }
                }
                , error: function () {
                    alert("头像更换失败，请稍后再试")
                }
            });
        });
    </script>
</body>
</html>
