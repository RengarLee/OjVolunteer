
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>瓯江义工网</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/oj/css/admin.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table/bootstrap-table-filter-control.css" rel="stylesheet" />


</head>

<body>
    <a href="/OrganizeInfo/ExportExcel">组织文件导出</a>
    <div>
        <table id="tb_organize" data-filter-control="true"></table>
    </div>
    <script src="~/Content/oj/js/jquery-1.12.4.js"></script>
    <script src="~/Scripts/bootstrap-table.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/oj/js/admin.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table-filter-control.js"></script>
    <script type="text/javascript">
        $(function () {
            //初始化表格
            initTable();
        });

        $("#btn_add").on('click', function () {
            $("#Name").val("");
            layer.open({
                type: 2,
                content: "/OrganizeInfo/Create",
                title: '添加学生',
                area: ['1000px', '500px']
            });
        });
        //初始化表格
        function initTable(queryParam) {
            $("#tb_organize").bootstrapTable('destroy');
            $('#tb_organize').bootstrapTable({
                contentType: "application/x-www-form-urlencoded",
                url: '/OrganizeInfo/GetAllOrganizeInfo',
                method: 'post',
                toolbar: '#toolbar',
                striped: true,
                cache: false,
                pagination: true,
                queryParams: function (param) {
                    return param;
                },
                sidePagination: "server",
                pageNumber: 1,
                pageSize: 10,
                pageList: [10, 20, 50, 100],
                smartDisplay: false,
                showColumns: true,
                showRefresh: true,
                minimumCountColumns: 3,
                clickToSelect: true,
                uniqueId: "OrganizeInfoID",
                rowStyle: function (row, index) {
                    var strclass = "";
                    if (row.ORDER_STATUS == "2") {
                        strclass = 'warning';//还有一个active
                    }
                    else if (row.ORDER_STATUS == "1") {
                        strclass = 'danger';
                    }
                    else {
                        return {};
                    }
                    return { classes: strclass }
                },
                columns: [
                    {
                        field: 'OrganizeInfoID',
                        title: '组织编号',
                        visible: false,
                        align: 'center',
                        width: '6%',
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoLoginId',
                        title: '组织用户名',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoShowName',
                        title: '组织昵称',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoPeople',
                        title: '组织负责人',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoPhone',
                        title: '手机号',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["OrganizeInfoPhone"] == null) {
                                return '未填写';
                            }
                            return value;
                        },
                        filterControl: 'input',
                    },
                    {
                        field: 'OrganizeInfoEmail',
                        title: '邮箱',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["OrganizeInfoEmail"] == null) {
                                return '未填写';
                            }
                            return value;
                        },
                        filterControl: 'input',
                    },
                    {
                        field: 'ActivityCount',
                        title: '义工活动数目',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["ActivityCount"] == null) {
                                return '0';
                            }
                            return value;
                        },
                        filterControl: 'input',
                    },
                    {
                        field: 'CreateTime',
                        title: '组织创建时间',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                        formatter: function (value, row, index) {
                            if (value == null)
                                return null;
                            else
                                return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'OrganizeInfoLastTime',//域值
                        title: '最后登录时间',//内容
                        visible: true,//false表示不显示
                        width: '6%',
                        align: 'center',
                        filterControl: 'input',
                        formatter: function (value, row, index) {
                            if (value == null)
                                return null;
                            else
                                return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'Status',//域值
                        title: '状态',//内容
                        visible: true,//false表示不显示
                        sortable: true,//启用排序
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["Status"] == 2) {
                                return '未审核';
                            } else if (row["Status"] == 1) {
                                return '已删除';
                            } else if (row["Status"] == 0) {
                                return '正常'
                            }
                        },
                        filterControl: 'input',
                    }
                ],
                onLoadSuccess: function (data) {
                    $(".editLink").click(function () {
                        editClickEvent($(this).attr("uid"));
                        return false;
                    });
                },
                onDblClickRow: function (row, $element) {
                    var index = layer.open({
                        type: 2,
                        title: false,
                        closeBtn: 0,
                        maxmin: false,
                        shadeClose: true,
                        closeBtn: 1,
                        area: ['1000px', '850px'],
                        content: '/OrganizeInfo/OrganizeDetail/' + row["OrganizeInfoID"]
                    });
                }
            });
        };
        //生成操作框图标
        function operateFormatter(value, row, index) {
            return [
                '<a  href="javascript:void(0)" class="editLink" uid="' + row['OrganizeInfoID'] + '">',
                '<i class="glyphicon glyphicon-pencil"></i>&nbsp;&nbsp;<span>编辑</span>',
                '</a>',
            ].join('');
        }
    </script>
</body>
</html>




