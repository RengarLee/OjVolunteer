@model OjVolunteer.Model.OrganizeInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OrganizeDetail</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/oj/css/admin.css" rel="stylesheet" />


</head>
<body>
    @using (Ajax.BeginForm("Edit", "OrganizeDetail", new AjaxOptions() { OnSuccess = "afterSubmit" }, new { @class = "layui-form layui-form-pane stuInfo-form" }))
    {
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.OrganizeInfoID)
            @Html.HiddenFor(model => model.OrganizeInfoManageId)
            @Html.HiddenFor(model => model.OrganizeInfoLastTime)
            @Html.HiddenFor(model => model.CreateTime)
            @Html.HiddenFor(model => model.Remark)
            @Html.HiddenFor(model => model.OrganizeInfoPwd)
            @Html.HiddenFor(model => model.OrganizeInfoLoginId)
            @Html.HiddenFor(Model=>Model.ActivityCount)
        </div>
        <div class="header clearfix">
            <div class="header-left">
                @Html.HiddenFor(model => model.OrganizeInfoIcon)
                <img src="@Model.OrganizeInfoIcon" width="100px" height="100px">
            </div>
            <div class="header-right">

                <div class="layui-form-item">
                    <label class="layui-form-label">登录名</label>
                    <div class="layui-input-block">
                        @Html.EditorFor(model => model.OrganizeInfoLoginId, new { htmlAttributes = new { autocomplete = "off", @class = "layui-input", disabled = ""} })
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">负责人</label>
                    <div class="layui-input-block">
                        @Html.EditorFor(model => model.OrganizeInfoPeople, new { htmlAttributes = new { autocomplete = "off", @class = "layui-input", lay_verify = "required|username" } })
                    </div>
                </div>
            </div>
        </div>
        <div class="content clearfix">
            <div class="content-left">

                <div class="layui-form-item">
                    <label class="layui-form-label">组织名称</label>
                    <div class="layui-input-block">
                        @Html.EditorFor(model => model.OrganizeInfoShowName, new { htmlAttributes = new { autocomplete = "off", @class = "layui-input", lay_verify = "required|orgname" } })
                    </div>
                </div>


                <div class="layui-form-item">
                    <label class="layui-form-label">邮箱</label>
                    <div class="layui-input-block">
                        @Html.EditorFor(model => model.OrganizeInfoEmail, new { htmlAttributes = new { autocomplete = "off", @class = "layui-input" } })
                    </div>
                </div>
            </div>
            <div class="content-right">

                <div class="layui-form-item">
                    <label class="layui-form-label">手机号</label>
                    <div class="layui-input-block">
                        @Html.EditorFor(model => model.OrganizeInfoPhone, new { htmlAttributes = new { autocomplete = "off", @class = "layui-input", lay_verify = "required|phone" } })
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">状态</label>
                    <div class="layui-input-block">
                        <select name="Status" lay-verify="required">
                            @{
                                if (Model.Status == 0)
                                {
                                    <option value="0" selected>正常</option>
                                    <option value="1">已删除</option>
                                }
                                else if (Model.Status == 1)
                                {
                                    <option value="0">正常</option>
                                    <option value="1" selected>已删除</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="content-footer">
                <div class="layui-form-item">
                    <label class="layui-form-label">注册时间</label>
                    <div class="layui-input-block">
                        @Html.EditorFor(model => model.CreateTime, new { htmlAttributes = new { autocomplete = "off", @class = "layui-input", disabled = "" } })
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">最后登录时间</label>
                    <div class="layui-input-block">
                        @Html.EditorFor(model => model.OrganizeInfoLastTime, new { htmlAttributes = new { autocomplete = "off", @class = "layui-input", disabled = "" } })

                    </div>
                </div>
            </div>

        </div>
        <div class="footer-btn">
            <div class="layui-form-item">
                <button class="layui-btn red-btn" lay-submit>确定修改</button>
                <button type="reset" class="layui-btn layui-btn-primary" id="orgcancel">重置密码</button>
            </div>
        </div>
    }
    <div>
        <div>
            <table id="tb_talks"></table>
        </div>
    </div>
    <div>
        <div>
            <table id="tb_activitys"></table>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/App/simple-ajax-form.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/oj/js/check.js"></script>
    <script type="text/javascript">

         $(function () {
            $("#orgcancel").click(function () {
                $.post("/UserInfo/ResetPwd", { "id": $("#UserInfoID").val() }, function (data) {
                    if (data == "success") {
                        alert("密码重置为000000");
                    } else {
                        alert("重置失败,请稍后再试");
                    }
                })

            });
            initTable_talk();
            initTable_activity();
        });

        function initTable_talk(queryParam) {
            $("#tb_talks").bootstrapTable('destroy');
            $('#tb_talks').bootstrapTable({
                contentType: "application/x-www-form-urlencoded",
                url: '/Talks/GetTalkByOrgId',
                method: 'post',
                toolbar: '#toolbar',
                striped: true,
                cache: false,
                pagination: true,
                queryParams: function (param) {
                    var temp = {
                        limit: param.limit,
                        offset: param.offset,
                        orgId: @Model.OrganizeInfoID,
                    };
                    return temp;
                },
                sidePagination: "server",
                pageNumber: 1,
                pageSize: 5,
                pageList: [5, 10, 20, 50],
                smartDisplay: false,
                showColumns: true,
                showRefresh: true,
                minimumCountColumns: 3,
                clickToSelect: true,
                uniqueId: "TalkID",
                columns: [
                    {
                        field: 'TalkID',
                        title: 'Id',
                        visible: false,
                        align: 'center',
                        width: '6%',

                    },
                    {
                        field: 'TalkFavorsNum',
                        title: '点赞数',
                        visible: true,
                        width: '6%',
                        align: 'center',
                    },
                    {
                        field: 'TalkContent',
                        title: '心得内容',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            var s = String(value).substr(0,20)+"...";
                            return s;
                        }
                    },
                    {
                        field: 'TalkFavorsNum',
                        title: '点赞数',
                        visible: true,
                        width: '6%',
                        align: 'center',

                    },
                    {
                        field: 'CreateTime',
                        title: '创建时间',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'ModfiedOn',
                        title: '最后更新时间',
                        visible: false,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'Status',
                        title: '状态',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["Status"] == 2) {
                                return '未审核';
                            } else if (row["Status"] == 1) {
                                return '已删除';
                            } else if (row["Status"] == 0) {
                                return '正常'
                            }
                        },
                        filterControl: 'input',
                    }
                ],
                onDblClickRow: function (row, $element) {
                    var index = layer.open({
                        type: 2,
                        title: false,
                        closeBtn: 0,
                        maxmin: false,
                        shadeClose: true,
                        area: ['600px', '700px'],
                        content: '/Talks/TalkDetail/' + row["TalkID"]
                    });
                }
            });
        };

         function initTable_activity(queryParam) {
            $("#tb_activitys").bootstrapTable('destroy');
            $('#tb_activitys').bootstrapTable({
                contentType: "application/x-www-form-urlencoded",
                url: '/ActivityDetail/GetActivityDetailByOrgId',
                method: 'post',
                toolbar: '#toolbar',
                striped: true,
                cache: false,
                pagination: true,
                queryParams: function (param) {
                    var temp = {
                        limit: param.limit,
                        offset: param.offset,
                        orgId: @Model.OrganizeInfoID,
                    };
                    return temp;
                },
                sidePagination: "server",
                pageNumber: 1,
                pageSize: 5,
                pageList: [5, 10, 20, 50],
                smartDisplay: false,
                showColumns: true,
                showRefresh: true,
                minimumCountColumns: 3,
                clickToSelect: true,
                uniqueId: "ActivityID",
                columns: [
                    {
                        field: 'ActivityID',
                        title: 'Id',
                        visible: false,
                        align: 'center',
                        width: '6%',

                    },
                    {
                        field: 'ActivityName',
                        title: '活动名称',
                        visible: true,
                        width: '6%',
                        align: 'center',
                    },
                    {
                        field: 'ActivityStart',
                        title: '活动开始时间',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'ActivityEnd',
                        title: '活动结束时间',
                        visible: true,
                        width: '6%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'ActivityDetailTime',
                        title: '义工时长',
                        visible: true,
                        width: '6%',
                        align: 'center',

                    },
                ],
                onDblClickRow: function (row, $element) {
                    var index = layer.open({
                        type: 2,
                        title: false,
                        closeBtn: 0,
                        maxmin: false,
                        shadeClose: true,
                        area: ['600px', '700px'],
                        content: '/Activity/ActivityDetail/' + row["ActivityID"]
                    });
                }
            });
        };
        function afterSubmit(data) {
            if (data == "success") {
                layer.alert('更改组织信息成功！', { icon: 1 });
            } else {
                layer.alert('更改失败！', { icon: 2 });
            }
        }
    </script>

</body>
</html>
