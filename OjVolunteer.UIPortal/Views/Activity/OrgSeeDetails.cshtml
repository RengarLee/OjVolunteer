                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">活动人数名额</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" class="layui-input" disabled value="@Model.ActivityPrediNum">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">点击量</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" class="layui-input" disabled value="@Model.ActivityClicks">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">报名开始时间</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" class="layui-input" disabled value="@Model.ActivityEnrollStart">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">报名结束时间</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" class="layui-input" disabled value="@Model.ActivityEnrollEnd">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">活动开始时间</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" class="layui-input" disabled value="@Model.ActivityStart">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">活动结束时间</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" class="layui-input" disabled value="@Model.ActivityEnd">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label htmlLable">下列政治面貌无法参加活动</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" class="layui-input htmlInput" value="@ViewBag.PoliticalStr" disabled>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label htmlLable">下列专业无法参加活动</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" class="layui-input htmlInput" value="@ViewBag.MajorStr" disabled>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label htmlLable">下列分院无法参加活动</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" class="layui-input htmlInput" value="@ViewBag.DepartmentStr" disabled>
                    </div>
                </div>
                <div class="layui-form-item layui-form-text">
                    <label class="layui-form-label" style="text-align:center;margin-bottom:0;">活动详情</label>
                    <div class="layui-input-block">
                        <div  class="layui-textarea"  disabled>
                            @Html.Raw(Model.ActivityContent)
                        </div>

                    </div>
                </div>
            </div>
       </div>
    </form>




