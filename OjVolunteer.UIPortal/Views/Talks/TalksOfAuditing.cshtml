<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>瓯江义工网</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table/bootstrap-table.css" rel="stylesheet" />



    <script src="~/Content/oj/js/jquery-1.12.4.js"></script>
    <script src="~/Scripts/bootstrap-table.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <script src="~/Content/bootstrap-table/bootstrap-table.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script type="text/javascript">
        $(function () {
            //初始化表格
            initTable();
            $("#btn_agrees").click(function () {
                agreeSelectClickEvent();
            });
            $("#btn_removes").click(function () {
                opposeSelectClickEvent();
            });
        });

        //初始化表格
        function initTable(queryParam) {
            $("#tb_talks").bootstrapTable('destroy');
            $('#tb_talks').bootstrapTable({
                contentType: "application/x-www-form-urlencoded",
                url: '/Talks/GetTalksOfAuditing',        
                method: 'post',                      
                toolbar: '#toolbar',
                striped: true,                      
                cache: false,                      
                pagination: true,                  
                queryParams: queryParam,
                sidePagination: "server",           
                pageNumber: 1,                     
                pageSize: 10,                    
                pageList: [10, 20, 50, 100],      
                smartDisplay: false,
                showColumns: true,                 
                showRefresh: true,              
                minimumCountColumns: 3,            
                clickToSelect: true,
                uniqueId: "TalksID",                     
                columns: [
                    {
                        field: 'checked',
                        checkbox: true,
                        width: '10%',
                    },
                    {
                        field: 'TalkID',
                        title: '心得编号',
                        visible: true,
                        width: '10%',
                        align: 'center',
                    },
                    {
                        field: 'UserInfoLoginId',
                        title: '义工登录名',
                        visible: true,
                        align: 'center',
                        width: '6%',
                        filterControl: 'input',
                    },
                    {
                        field: 'UserInfoShowName',
                        title: '义工昵称',
                        visible: true,
                        width: '10%',
                        align: 'center',
                    },
                    {
                        field: 'OrganizeInfoShowName',
                        title: '组织昵称',
                        visible: true,
                        width: '10%',
                        align: 'center',
                    },
                    {
                        field: 'ModfiedOn',
                        title: '申请时间',
                        visible: true,
                        width: '13%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (value == null)
                                return null;
                            else
                                return new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10)).pattern("yyyy-MM-dd HH:mm");
                        }
                    },
                    {
                        field: 'Status',
                        title: '状态',
                        visible: true,
                        width: '10%',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row["Status"] == 2) {
                                return '未审核';
                            } else {
                                return '异常';
                            }
                        },
                    },
                    {
                        field: 'operate',
                        title: '操作',
                        align: 'center',
                        width: '25%',
                        formatter: operateFormatter,
                    }
                ],
                onLoadSuccess: function (data) {

                    $(".agreeLink").click(function () {
                        agreeClickEvent($(this).attr("uid"));
                        return false;
                    });
                    $(".opposeLink").click(function () {
                        opposeClickEvent($(this).attr("uid"));
                        return false;
                    })
                },
                onDblClickRow: function (row, $element) {
                    var index = layer.open({
                        type: 2,
                        title: false,
                        closeBtn: 0,
                        maxmin: false,
                        shadeClose: true,
                        area: ['600px', '700px'],
                        content: '/Talks/TalkDetail/' + row["TalkID"]
                    });
                }
            });
        };

        //批量通过
        function agreeSelectClickEvent() {
            var selectedRows = $('#tb_talks').bootstrapTable('getSelections', function (row) {
                return row;
            });
            if (selectedRows.length <= 0) {
                alert("至少选中一个选项");
            }
            var ids = "";
            for (var key in selectedRows) {
                ids += selectedRows[key].TalkID + ",";
            }
            ids = ids.substr(0, ids.length - 1);
            $.post("/Talks/EditOfList", { ids, ids }, function (data) {
                //初始化表格
                initTable();
                if (data == "success") {
                    alert("操作成功");
                } else if (data == "null") {
                    alert("至少选择一列");
                } else {
                    alert("操作失败,请稍后再试");
                }
            });
        }

        //单项通过事件
        function agreeClickEvent(data) {
            $.post("/Talks/EditOfList", { ids: data }, function (data) {
                initTable();
                if (data == "success") {
                    alert("操作成功");
                } else if (data == "null") {
                    alert("至少选择一列");
                } else {
                    alert("操作失败,请稍后再试");
                }
            });
        }

        //批量删除
        function opposeSelectClickEvent() {
            var selectedRows = $('#tb_talks').bootstrapTable('getSelections', function (row) {
                return row;
            });
            if (selectedRows.length <= 0) {
                alert("至少选中一个选项");
            }
            var ids = "";
            for (var key in selectedRows) {
                ids += selectedRows[key].TalkID + ",";
            }
            ids = ids.substr(0, ids.length - 1);
            $.post("/Talks/DeleteOfList", { ids, ids }, function (data) {
                //初始化表格
                initTable();
                if (data == "ok") {
                    alert("操作成功");
                } else if (data == "null") {
                    alert("至少选择一列");
                } else {
                    alert("操作失败,请稍后再试");
                }
            });
        }

        //单项删除事件
        function opposeClickEvent(data) {
            $.post("/Talks/DeleteOfList", { ids: data }, function (data) {
                initTable();
                if (data == "ok") {
                    alert("操作成功");
                } else if (data == "null") {
                    alert("至少选择一列");
                } else {
                    alert("操作失败,请稍后再试");
                }
            })
        }

        //生成操作框图标
        function operateFormatter(value, row, index) {
            return [
                '<a  href="javascript:void(0)" class="agreeLink" uid="' + row['TalkID'] + '">',
                '<i class="glyphicon glyphicon-ok"></i>&nbsp;&nbsp;<span>通过</span>',
                '</a>&nbsp;&nbsp;&nbsp;&nbsp;',
                '<a href="javascript:void(0)" class="opposeLink" uid="' + row['TalkID'] + '">',
                '<i class="glyphicon glyphicon-remove"></i>&nbsp;&nbsp;<span>拒绝</span></a>',
            ].join('');
        }
    </script>
</head>
<body>


    <div id="toolbar" class="btn-group">
        <button id="btn_agrees" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>通过
        </button>
        <button id="btn_removes" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>>拒绝
        </button>
    </div>
    <div>
        <table id="tb_talks"></table>
    </div>


    <script src="~/Content/layui/layui.all.js"></script>
</body>
</html>
